 <div class="container">
  <div class = "user-form">
   <h2>Hi <%= current_user.username %>.</h2>
      <p><%= link_to "Add a potluck!", new_event_path, class: "btn btn-success"   %></p>
    <% if current_user.events.empty? %>
      <div class="jumbotron">
         <p>You have no upcoming potlucks scheduled. Get social and <%= link_to "join a potluck.", events_path %></p>
      </div>
      <% else %>
        <div class="row">
          <div class="col-xs-12 tile-container">
          <div class="jumbotron">
          <h3>Upcoming Potlucks</h3>
          <% current_user.events.each do |event| %>
            <li><%= link_to event.title, event_path(event) %></li>
          <% end %>
          <%= link_to "Join more.", events_path, class: "btn btn-success"   %>
          </div>
            </div>
            </div>
      <% end %>
    <div class="row">
      <!-- SAY WHAT EVENT THE DISH IS FOR -->
      <div class="col-xs-12 tile-container">
      <div class="jumbotron">
          <h3>Dishes To Prepare:</h3>
          <% if @dishes.empty? %>
            <p>You haven't signed up to cook anything yet? Get with it.</p>
              <p><%= link_to "Add Dish", new_user_dishes_path(current_user), class: "btn btn-success"   %></p>
          <% else %>
            <% @dishes.each do |dish| %>
              <li>Name: <%= dish.name %>,
                Course: <%= dish.course %></li>
            <%= link_to 'Show', edit_user_dishes_path(current_user.id, dish.id) %>
          <% end %>
            <p><%= link_to "Add dish.",  user_dishes_path(current_user), class: "btn btn-success"   %></p>
        <% end %>
        <br>
           </div>
    </div>
     </div>
    <% if @created_events %>
     <div class="row">
      <div class="col-xs-12 tile-container">
      <div class="jumbotron">
          <h3>Potlucks You've Created</h3>
          <% if @created_events.empty? %>
             <p><%= link_to "Start one up.", new_event_path , class: "btn btn-success"   %></p>
          <% else %>
            <% @created_events.each do |event| %>
              <li><%= link_to event.title, event_path(event) %></li>
            <% end %>
          <% end %>
    </div>
    </div>
    </div>
      <% end %>
  </div>
</div>
