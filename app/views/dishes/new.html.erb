<div class = "container">
  <div class="two-column">
  <h2>What will you bring?</h2>
  <%= form_for ([@user, @dish]) do |f|  %>

    <div class="field">
      <%= f.label :name, "Name of dish: " %> <br />
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :course, "Course: " %> <br />
      <%= f.text_field :course %>
    </div>

    <div class="field">
      <%= f.label :gluten_free, "Gluten-free? " %> <br />
       <%= f.check_box :gluten_free %> <br />

      <br />
    </div>
  </br>
     <%= submit_tag "Create New Potluck", id: "submit-new-meetup-btn",class: "btn btn-success" %>
  <% end %>


    <%= link_to image_tag("outdoor_potluck.jpg", :class => "outdoor-potluck"), welcome_index_path %>
  </div>
</div>