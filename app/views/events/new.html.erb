<div class = "container">
  <h2>Add A New Potluck</h2>
  <%= form_for @event do |f| %>
    <p>
    <%= f.label :title, "Fancy Name" %><br>
    <%= f.text_field :title, :size => "30x10" %>
    </p>

     <p>
    <%= f.label :street_address, "Street Address" %><br>
    <%= f.text_field :street_address, :size => "30x10" %>
    </p>
    <p>
    <%= f.label :zip %><br>
    <%= f.text_field :zip, :size => "10x10" %>
    </p>

     <p>
    <%= f.label :date %><br>
    <%= f.date_field :date %>
    </p>

     <p>
    <%= f.label :start_time, "Start Time" %><br>
    <%= f.time_field :time %>
    </p>

      <p>
      <%= f.label :description %><br>
      <%= f.text_area :description, :size => "80x5" %>
    </p>
    <p>
       <%= submit_tag "Create It.", id: "submit-new-meetup-btn",class: "btn btn-success" %>
    </p>
  <% end %>
</div>