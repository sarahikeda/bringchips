<div class = "container">
   <h2>Hi <%= current_user.username %>.</h2>
      <div class="jumbotron">
        <h3>Potluck Deets for <%= @event.title %> on <%= @event.date.strftime("%B %d, %Y") %> </h3>
        Start Time: <%= @event.start_time %> pm<br>
        Location:
          <li><%= @event.street_address %></li>
          <li><%= @event.city %> <%= @event.state %> <%= @event.zip %></li>

        Description: <%= @event.description %>
        <h4>Attendees:</h4>
        <ul>
          <% @dishes.each do |dish| %>
            <li><%=dish.attendees.name %> is bringing <%= link_to dish.name, dish_path(dish) %>
          <% end %>
        </ul>
        <% if @created_event.empty? && @attending_event.empty? %>
          <%= link_to "Join 'em!", edit_event_path(@event), class: "btn btn-success" %>
        <% end %>
          <%= link_to "Bring something.", new_dish_path, class:  "btn btn-success" %>
      </div>
</div>
