<div class = "container">
  <h3>All events</h3>
  <table class = "table table-striped table-hover">
    <tr class = "danger">
      <th>Event</th>
      <th>Month</th>
      <th>Day</th>
    </tr>
  <% @events.each do |event| %>
  <tr>
   <td><%= link_to event.title, event_path(event) %> </td>
    <td><%=event.date.strftime("%B")%></td>
      <td><%=event.date.strftime("%d")%> </td>
  <% end %>
</table>
    </tr>
</div>
